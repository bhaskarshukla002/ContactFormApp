<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.form.SelfieCaptureFragment">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/tvSelfie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Upload your photo"
        android:textSize="22sp"
        android:textColor="#404040"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/img_photo_preview"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_margin="40dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintTop_toBottomOf="@id/tvSelfie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCaptureSelfie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Capture"
        android:backgroundTint="#404040"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/img_photo_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="40dp"/>
    <Button
        android:id="@+id/btn_next_photo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:backgroundTint="#404040"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/btnCaptureSelfie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>